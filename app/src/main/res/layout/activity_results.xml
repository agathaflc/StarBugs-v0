<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hk.ust.sight.starbugsv0.tutorial_2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" New Patient "
        android:id="@+id/newPButton"
        android:clickable="true"
        android:textSize="24sp"
        android:background="#945fd9f4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/result_text"
        android:layout_alignEnd="@+id/result_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Regrade    "
        android:id="@+id/regradeButton"
        android:clickable="true"
        android:textSize="24sp"
        android:background="#945fd9f4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="R1"
        android:id="@+id/result_text"
        android:textColor="#ff000000"
        android:textSize="36sp"
        android:gravity="center_horizontal"
        android:layout_gravity="right"
        android:layout_weight="0.18"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/result_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src= "@drawable/fundusview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info about symptoms+treatment\nWhat to do next"
        android:id="@+id/confirm_instructions"
        android:layout_marginBottom="36dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grading result for (patient_name)"
        android:id="@+id/result_title"
        android:textColor="#ff000000"
        android:textSize="29sp"
        android:gravity="center_horizontal"
        android:layout_gravity="right"
        android:layout_weight="0.18"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
