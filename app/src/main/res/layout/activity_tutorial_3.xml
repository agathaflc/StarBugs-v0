<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="hk.ust.sight.starbugsv0.tutorial_3"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/step3_label"
            android:id="@+id/step3Label"
            android:textColor="#ff000000"
            android:textSize="28sp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="129dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/step3Instruct"
            android:textColor="#ff000000"
            android:textSize="32sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/step3Label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/step3_instruct" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="226dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageFundusview"
            android:layout_below="@+id/step3Instruct"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fundusview"
            android:layout_alignParentEnd="false" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="364dp"
        android:layout_height="127dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done_txt"
            android:id="@+id/btnNext3"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#945fd9f4"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_alignTop="@+id/btnBack4"
            android:layout_toRightOf="@+id/btnBack4"
            android:layout_toEndOf="@+id/btnBack4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_btn"
            android:id="@+id/btnBack4"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#945fd9f4"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
