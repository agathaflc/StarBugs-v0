<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hk.ust.sight.starbugsv0.tutorial_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adjust Position To Obtain a Clear Field of View of the Fundus"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:textSize="36sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step 3:"
        android:id="@+id/textView8"
        android:textColor="#ff000000"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:layout_gravity="left"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fundusview"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_btn"
        android:id="@+id/btnNext"
        android:clickable="true"
        android:textSize="24sp"
        android:background="#945fd9f4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_btn"
        android:id="@+id/btnBack"
        android:clickable="true"
        android:textSize="24sp"
        android:background="#945fd9f4"
        android:layout_alignTop="@+id/btnNext"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />
</RelativeLayout>
