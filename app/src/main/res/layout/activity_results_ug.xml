<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hk.ust.sight.starbugsv0.resultsUg"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/result_title"
            android:id="@+id/result_title"
            android:textColor="#ff000000"
            android:textSize="29sp"
            android:gravity="center_horizontal"
            android:layout_weight="0.18"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ug_label"
            android:id="@+id/result_text1"
            android:textColor="#f6fd17"
            android:textSize="60dp"
            android:gravity="center_horizontal"
            android:textColorHighlight="#f6fd17"
            android:textColorHint="#f6fd17"
            android:textColorLink="#f6fd17"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="#4e4e4e"
            android:layout_alignParentBottom="true"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:id="@+id/imageEyedrops"
            android:src= "@drawable/fundusview"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="50dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ug_result"
                android:id="@+id/ug_result"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top" />

            <TextView
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ug_description"
                android:id="@+id/ug_description"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_instructions"
            android:layout_marginBottom="36dp"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/new_patient_btn"
            android:id="@+id/newPButton1"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#945fd9f4"
            android:layout_alignTop="@+id/regradeButton3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/regrade_btn"
            android:id="@+id/regradeButton1"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#945fd9f4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
