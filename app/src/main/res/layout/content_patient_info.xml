<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hk.ust.sight.starbugsv0.PatientInfo"
    tools:showIn="@layout/activity_patient_info">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="N.I.K."
        android:id="@+id/textNik"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFirstName"
        android:inputType="text"
        android:hint="FIRST NAME"
        android:layout_below="@+id/textSurname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textMiddleName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMiddleName"
        android:inputType="text"
        android:hint="MIDDLE NAME"
        android:layout_below="@+id/textNik"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@+id/textDob" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSurname"
        android:inputType="text"
        android:hint="FAMILY/SURNAME"
        android:layout_below="@+id/textNik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender:"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_below="@+id/textFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDob"
        android:hint="Date of Birth"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnBack"
        android:layout_alignEnd="@+id/btnBack" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPhone"
        android:hint="Phone Number"
        android:layout_above="@+id/btnBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnNext2"
        android:clickable="true"
        android:textSize="24sp"
        android:background="#945fd9f4"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textClock"
        android:layout_toStartOf="@+id/textClock"
        android:layout_marginBottom="91dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:textSize="24dp"
        android:background="#945fd9f4"
        android:layout_alignTop="@+id/btnNext2"
        android:layout_toLeftOf="@+id/btnNext2"
        android:layout_toStartOf="@+id/btnNext2"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFirstName"
        android:weightSum="1"
        android:id="@+id/radioGroup"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toStartOf="@+id/textMiddleName"
        android:layout_toLeftOf="@+id/textMiddleName">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioM"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.19" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/radioF"
            android:layout_toRightOf="@+id/radioM"
            android:layout_weight="0.14" />

    </RadioGroup>

</RelativeLayout>
