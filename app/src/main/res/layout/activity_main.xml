<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/welcome1_label"
            android:id="@+id/welcome1Label"
            android:layout_marginTop="83dp"
            android:textColor="#ff000000"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            android:layout_weight="0.08" />

        <ImageView
            android:src="@drawable/snapgrade"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/welcome2_label"
            android:id="@+id/welcome2Label"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPatientInfo"
            android:clickable="true"
            android:textSize="22sp"
            android:background="#945fd9f4"
            android:text="@string/patient_info_btn"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="recent patient information"
            android:id="@+id/btnRecent"
            android:textSize="20sp"
            android:background="#945fd9f4"
            android:layout_below="@+id/btnPatientInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Our Mapping method"
            android:id="@+id/btnMap"
            android:textSize="20sp"
            android:background="#945fd9f4"
            android:elevation="0dp"
            android:layout_below="@+id/btnRecent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_btn"
            android:id="@+id/btnSkip"
            android:textSize="20sp"
            android:background="#945fd9f4"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btnMap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDemo"
            android:clickable="true"
            android:textSize="22sp"
            android:background="#945fd9f4"
            android:text="DEMO"
            android:layout_below="@+id/btnSkip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

</LinearLayout>
