<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/welcome1_label"
            android:id="@+id/welcome1Label"
            android:layout_marginTop="83dp"
            android:textColor="#ff000000"
            android:textSize="36sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/welcome2_label"
            android:id="@+id/welcome2Label"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.09">

        <TextView
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="@string/admin_label"
            android:id="@+id/adminLabel"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/editAdminName"
            android:hint="@string/admin_name"
            android:editable="true"
            android:layout_weight="0.04"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <EditText
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:id="@+id/editPw"
            android:hint="@string/admin_pw"
            android:editable="true"
            android:layout_gravity="right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="179dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPatientInfo"
            android:clickable="true"
            android:textSize="22sp"
            android:background="#945fd9f4"
            android:text="@string/patient_info_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/skip_btn"
            android:id="@+id/btnSkip"
            android:textSize="20sp"
            android:background="#945fd9f4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp" />
    </RelativeLayout>

</LinearLayout>
