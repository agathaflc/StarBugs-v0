<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getGrade"
            android:id="@+id/testGrade1"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#941bf913"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="GradedImagea2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.40" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getGrade"
            android:id="@+id/testGrade2"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#941bf913"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="GradedImageb2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.32" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getGrade"
            android:id="@+id/testGrad3e"
            android:clickable="true"
            android:textSize="24sp"
            android:background="#941bf913"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="GradedImagec2"
            android:layout_weight="0.19" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Red Channel"
            android:id="@+id/textView"
            android:layout_weight="0.40"
            android:textAlignment="center"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Green Channel"
            android:id="@+id/textView2"
            android:layout_weight="0.68"
            android:autoText="false"
            android:textAlignment="center"
            android:textSize="28dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:id="@+id/red"
            android:background="#000000" />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:id="@+id/green"
            android:background="#000000"
            android:contentDescription="red" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Optical Disk"
            android:id="@+id/textView3"
            android:layout_weight="0.50"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:text=" Exudates"
            android:id="@+id/textView4"
            android:layout_weight="0.50"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:id="@+id/grey"
            android:background="#020202" />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:id="@+id/edge1"
            android:background="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:id="@+id/ori"
                android:background="#000000"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Button
            android:background="#FF5555"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Result"
            android:clickable="true"
            android:onClick="Result"
            android:id="@+id/button" />
    </LinearLayout>

</LinearLayout>